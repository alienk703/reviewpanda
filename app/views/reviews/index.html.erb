<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Modelname</th>
      <th>Price</th>
      <th>Spec</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.department %></td>
        <td><%= review.category %></td>
        <td><%= review.brand %></td>
        <td><%= review.modelname %></td>
        <td><%= review.price %></td>
        <td><%= review.spec %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
